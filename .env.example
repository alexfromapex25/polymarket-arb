# Polymarket Arbitrage Bot Configuration
# Copy this file to .env and fill in your values

# === Polymarket Credentials ===
# Wallet private key (hex, starts with 0x)
POLYMARKET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Optional: Pre-generated API credentials
# POLYMARKET_API_KEY=
# POLYMARKET_API_SECRET=
# POLYMARKET_API_PASSPHRASE=

# === Wallet Configuration ===
# Signature type: 0=EOA (default), 1=Magic.link, 2=Gnosis Safe
POLYMARKET_SIGNATURE_TYPE=0

# Proxy wallet address (required for Magic.link, signature_type=1)
# POLYMARKET_FUNDER=0x...

# === Trading Parameters ===
# Maximum combined cost to trigger arbitrage (default: 0.991 = 0.9% profit)
TARGET_PAIR_COST=0.991

# Number of shares per trade (minimum 5)
ORDER_SIZE=5

# Order type: FOK (fill-or-kill), FAK (fill-and-kill), GTC (good-till-cancelled)
ORDER_TYPE=FOK

# === Operation Modes ===
# Simulation mode - set to false for live trading (default: true)
DRY_RUN=true

# Starting balance for simulation
SIM_BALANCE=100

# Minimum seconds between trade executions
COOLDOWN_SECONDS=10

# === Market Discovery ===
# Force specific market slug (bypasses auto-discovery)
# POLYMARKET_MARKET_SLUG=btc-updown-15m-1234567890

# === WebSocket Configuration ===
# Enable WebSocket feed instead of polling (default: false)
USE_WSS=false

# WebSocket URL
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com

# CLOB API URL
POLYMARKET_CLOB_URL=https://clob.polymarket.com

# === Server Configuration ===
# HTTP server port for health/metrics endpoints
PORT=8080

# Log level: trace, debug, info, warn, error
RUST_LOG=info
